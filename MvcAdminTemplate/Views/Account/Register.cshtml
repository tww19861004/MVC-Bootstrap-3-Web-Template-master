@{
    ViewBag.Title = "Register";
}
@Styles.Render("~/Content/Vendors")

@*@Html.Partial("_LeftMenu")*@

<!-- content -->
<div class="col-md-12">
    <div class="row">
        <div class="panel panel-default bootstrap-admin-no-table-panel">
            <div class="bootstrap-admin-no-table-panel-content bootstrap-admin-panel-content collapse in">
                <form class="form-horizontal" id="form1" name="form1" role="form" method="post" action="@Url.Action("RegisterSubmit", "Account")">
                    <fieldset>
                        <legend>免费注册，即可拥有你的机器人</legend>
                        <div class="form-group">
                            <label class="col-lg-2 control-label" for="focusedInput">*用户名：</label>
                            <div class="col-lg-10">                                
                                <input type="text" class="form-control" id="txtUserName" name="txtUserName" placeholder="请输入用户名" valid="required|regexp" regexp="^[a-zA-Z0-9_]{3,16}$" errmsg="必填！|必须为3~16位长度的数字、字母、下划线组合！" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label" for="focusedInput">*邮箱：</label>
                            <div class="col-lg-10">
                                <input type="text" class="form-control" id="txtEmail" name="txtEmail" placeholder="请输入邮箱" valid="required|regexp" regexp="^[a-zA-Z0-9_]{3,16}$" errmsg="必填！|必须为3~16位长度的数字、字母、下划线组合！" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label" for="focusedInput">*密码：</label>
                            <div class="col-lg-10">
                                <input type="text" class="form-control" id="txtPwd" name="txtPwd" placeholder="请输入密码" valid="required|regexp" regexp="^[a-zA-Z0-9_]{3,16}$" errmsg="必填！|必须为3~16位长度的数字、字母、下划线组合！" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label" for="focusedInput">*确认密码：</label>
                            <div class="col-lg-10">
                                <input type="text" class="form-control" id="txtConfirmedPwd" name="txtConfirmedPwd" placeholder="请再次输入密码" valid="required|regexp" regexp="^[a-zA-Z0-9_]{3,16}$" errmsg="必填！|必须为3~16位长度的数字、字母、下划线组合！" />
                            </div>
                        </div>
                        <div class="form-group">     
                            <label class="col-lg-2 control-label" for="focusedInput"></label>                       
                            <div class="col-lg-10">
                                <button type="submit" class="btn btn-primary">提交注册信息</button>                                
                            </div>
                        </div>  
                        <div class="form-group">
                            <label class="col-lg-2 control-label" for="focusedInput"></label>
                            <div class="col-lg-10">                                
                                <a href="@Url.Action("Login","Account")">已有账号？马上登录吧！</a>
                                <a href="javascript:void(0);" id="qqLoginBtn">
                                    <img src="~/img/qqlogin.png" /> 
                                </a>
                            </div>
                        </div>                        
                    </fieldset>
                </form>
            </div>
        </div>
    </div>    
</div>